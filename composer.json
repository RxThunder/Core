{
  "name": "rxthunder/core",
  "description": "Event driven CLI micro framework with Reactive Programming flavors",
  "license": "MIT",
  "authors": [
    {
      "name": "Jérémy Marodon",
      "email": "marodon.jeremy@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.2",
    "ext-json": "*",
    "mnapoli/silly": "^1.7",
    "symfony/config": "^4.1",
    "symfony/dependency-injection": "^4.1",
    "symfony/dotenv": "^4.2",
    "symfony/finder": "^4.1",
    "symfony/routing": "^4.1",
    "rxnet/eventstore-client": "^2.3 || ^3.0",
    "rxnet/rabbitmq": "^0.1.0",
    "voryx/event-loop": "^3.0",
    "guzzlehttp/guzzle": "^6.3"
  },
  "require-dev": {
    "phpstan/phpstan": "dev-master",
    "friendsofphp/php-cs-fixer": "^2.12",
    "phpro/grumphp": "^0.14.3",
    "sensiolabs/security-checker": "^5.0"
